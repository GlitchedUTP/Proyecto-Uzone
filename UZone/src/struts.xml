<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <package name="default" extends="struts-default">
        <action name="index">
            <result>index.jsp</result>
        </action>
        <action name="loginaction" class="com.glitched.uzonewebprofile.actions.UserAction">
            <result name="success">/successLogin.jsp</result>
            <result name="error">/errorLogin.jsp</result>
        </action>
        <action name="dataUser" class="com.glitched.uzonewebprofile.actions.PostAction">
            <result name="success">index.jsp</result>
        </action>
        <action name="register">
            <result>userRegister.jsp</result>
        </action>
        <action name="dataEvent" class="com.glitched.uzonewebprofile.actions.PostAction">
            <result name="success">index.jsp</result>
        </action>
        <action name="login">
            <result>loginPage.jsp</result>
        </action>
    </package>
</struts>